@model IEnumerable<SuperHeroCala.Models.SuperHero>

@{
    ViewBag.Title = "List";
}

<h2>List</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.superHeroName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.alterEgo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.primarySuperHeroAbility)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.secondarySuperHeroAbility)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.catchPhrase)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.superHeroName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.alterEgo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.primarySuperHeroAbility)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.secondarySuperHeroAbility)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.catchPhrase)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ID }) |
            @Html.ActionLink("Details", "Details", new { id=item.ID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>
